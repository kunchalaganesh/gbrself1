<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="5">

    <TextView
        android:id="@+id/ocolor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fontFamily="@font/sfpro_text_regular"
        android:padding="5dp"
        android:text="Model"
        android:textColor="@color/app_color"
        android:textSize="12sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/oqty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fontFamily="@font/sfpro_text_regular"
        android:padding="5dp"
        android:text="Qty"
        android:textColor="@color/app_color"
        android:textSize="12sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/oprice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fontFamily="@font/sfpro_text_regular"
        android:padding="5dp"
        android:text="Price"
        android:textColor="@color/app_color"
        android:textSize="12sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/ovalue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fontFamily="@font/sfpro_text_regular"
        android:padding="5dp"
        android:text="Value"
        android:textColor="@color/app_color"
        android:textSize="12sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/oimei"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/et_border"
        android:backgroundTint="@color/app_bg_color"
        android:fontFamily="@font/sfpro_text_regular"
        android:gravity="center"
        android:padding="5dp"
        android:text="IMEI"
        android:textColor="@color/app_color"
        android:textSize="12sp"
        android:textStyle="bold" />

</LinearLayout>