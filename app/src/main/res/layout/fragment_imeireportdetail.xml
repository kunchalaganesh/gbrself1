<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_color"
    tools:context=".fragments.imeireportdetail">

    <ImageView
        android:id="@+id/g_logo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="20dp"
        android:src="@drawable/g_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/salesname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:background="@drawable/et_border"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/sfprotext_semibold"
        android:padding="8dp"
        android:singleLine="true"
        android:text="Sales Buddy Name"
        android:textColor="@color/app_color"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@id/g_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/g_logo" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/dashboard_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/g_logo"
        app:layout_constraintVertical_bias="1.0">


        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="158dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="159dp"
            android:layout_marginBottom="611dp"
            android:fontFamily="@font/sfpro_text_regular"
            android:text="IMEI Report"
            android:textColor="@color/app_color"
            android:textSize="17dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <LinearLayout
            android:id="@+id/items_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="184dp"
            android:layout_marginEnd="10dp"
            android:visibility="gone"
            android:layout_marginBottom="271dp"
            android:background="@drawable/et_border"
            android:orientation="vertical"
            android:padding="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/etborder1"
                    android:fontFamily="@font/sfpro_text_regular"
                    android:text="Model Name"
                    android:textColor="@color/app_color"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:id="@+id/tmname"
                    android:background="@drawable/etborder1"
                    android:fontFamily="@font/sfpro" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/etborder1"
                    android:fontFamily="@font/sfpro_text_regular"
                    android:text="Brand"
                    android:textColor="@color/app_color"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:id="@+id/tbname"
                    android:background="@drawable/etborder1"
                    android:fontFamily="@font/sfpro" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/etborder1"
                    android:fontFamily="@font/sfpro_text_regular"
                    android:text="DBR Name"
                    android:textColor="@color/app_color"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:id="@+id/tdbrname"
                    android:background="@drawable/etborder1"
                    android:fontFamily="@font/sfpro" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/etborder1"
                    android:fontFamily="@font/sfpro_text_regular"
                    android:text="Retailer Name"
                    android:textColor="@color/app_color"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:id="@+id/trname"
                    android:background="@drawable/etborder1"
                    android:fontFamily="@font/sfpro" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/etborder1"
                    android:fontFamily="@font/sfpro_text_regular"
                    android:text="Secondary Date"
                    android:textColor="@color/app_color"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:id="@+id/tsdate"
                    android:background="@drawable/etborder1"
                    android:fontFamily="@font/sfpro" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/etborder1"
                    android:fontFamily="@font/sfpro_text_regular"
                    android:text="SellOut Date"
                    android:textColor="@color/app_color"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:id="@+id/tsoutdate"
                    android:background="@drawable/etborder1"
                    android:fontFamily="@font/sfpro" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/etborder1"
                    android:fontFamily="@font/sfpro_text_regular"
                    android:text="Activation Date"
                    android:textColor="@color/app_color"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:id="@+id/tacdate"
                    android:background="@drawable/etborder1"
                    android:fontFamily="@font/sfpro" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:weightSum="2">


                <TextView
                    android:id="@+id/sharebtn"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_gravity="end"
                    android:layout_weight="1"
                    android:background="@drawable/et_border"
                    android:backgroundTint="@color/app_bg_color"
                    android:elevation="2dp"
                    android:fontFamily="@font/sfpro_text_regular"
                    android:gravity="center"
                    android:text="Share"
                    android:layout_marginEnd="10dp"
                    android:textColor="@color/app_color"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/backbtn"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="50dp"
                    android:layout_gravity="end"
                    android:background="@drawable/et_border"
                    android:backgroundTint="@color/app_bg_color"
                    android:elevation="2dp"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/sfpro_text_regular"
                    android:gravity="center"
                    android:text="Back"
                    android:textColor="@color/app_color"
                    android:textStyle="bold" />


            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:id="@+id/scan_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="144dp"
            android:layout_marginTop="139dp"
            android:layout_marginEnd="145dp"
            android:layout_marginBottom="428dp"
            android:background="@drawable/et_border"
            android:padding="10dp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_baseline_camera_alt_24"
                app:tint="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/sfpro_text_regular"
                android:text="Scan IMEI"
                android:textColor="@color/app_color"
                android:textSize="15sp" />
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>